<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTaskFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            app:layout_constraintVertical_bias="0.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:text="Create new task"
                android:textAppearance="@style/title" />

            <TextView
                android:id="@+id/photoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Upload photo of the task"
                android:textAppearance="@style/text" />

            <ImageView
                android:id="@+id/takePhoto"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/outline_add_a_photo_24"
                app:tint="@color/tea_green" />

            <ImageView
                android:id="@+id/photo"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:rotation="0"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/retakePhotoLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/retakePhoto"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="10dp"
                    app:tint="@color/tea_green"
                    android:src="@drawable/baseline_autorenew_24" />

                <ImageView
                    android:id="@+id/deletePhoto"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="10dp"
                    app:tint="@color/tea_green"
                    android:src="@drawable/baseline_delete_outline_24" />

            </LinearLayout>

            <TextView
                android:id="@+id/fileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Upload file of the task"
                android:textAppearance="@style/text" />

            <ImageView
                android:id="@+id/getFile"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/outline_upload_file_24"
                app:tint="@color/tea_green" />

            <TextView
                android:id="@+id/file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:textColor="@color/chestnut"
                android:visibility="gone"
                android:text="TextView" />

            <LinearLayout
                android:id="@+id/regetFileLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/regetFile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="10dp"
                    app:tint="@color/tea_green"
                    android:src="@drawable/baseline_autorenew_24" />

                <ImageView
                    android:id="@+id/deleteFile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="10dp"
                    app:tint="@color/tea_green"
                    android:src="@drawable/baseline_delete_outline_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ratingError"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:text="Select rating"
                    android:textAppearance="@style/error"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/rattingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rattingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="Choose the difficulty level"
                        android:textAppearance="@style/text" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:numStars="5"
                        android:stepSize="1"
                        android:rating="1"
                        android:theme="@style/RatingBar" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@android:drawable/editbox_background"
                    android:hint="Wprowadź imie"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:theme="@style/editTextStyle"
                    android:textColor="@color/chestnut"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/nameError"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Wprowadź imie"
                    android:textAppearance="@style/error"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/descriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/descriptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@android:drawable/editbox_background"
                    android:hint="Wprowadź opis"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/chestnut"
                    android:theme="@style/editTextStyle"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/descriptionError"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Wprowadź opis"
                    android:textAppearance="@style/error"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/deadlineError"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:text="Wprowadź deadline "
                    android:textAppearance="@style/error"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/deadlineLayoutTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:background="@android:drawable/editbox_background"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/deadlineTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:textColor="@color/chestnut"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/deadlineImageTV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/tea_green" />

                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/saveButton"
                style="@style/Widget.Material3.FloatingActionButton.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="50dp"
                android:backgroundTint="@color/chestnut"
                android:contentDescription="fabTaskList"
                android:text="@string/save"
                android:textAppearance="@style/text_white"
                android:textColor="@color/light_yellow"
                app:icon="@drawable/outline_save_24"
                app:iconGravity="end"
                app:iconTint="@color/light_yellow"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                tools:ignore="HardcodedText,ImageContrastCheck" />
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>