<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTaskFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Create new task"
            android:textAppearance="@style/title"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp" />

        <ImageView
            android:id="@+id/takePhoto"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:src="@drawable/outline_add_a_photo_24"
            app:tint="@color/tea_green"/>

        <ImageView
            android:id="@+id/photo"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:rotation="0"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/retakePhotoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/retakePhoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/baseline_autorenew_24" />

            <ImageView
                android:id="@+id/deletePhoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"

                android:src="@drawable/baseline_delete_outline_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/nameError"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Wprowadź imie"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/error" />

            <LinearLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="70dp"
                    android:textAppearance="@style/text"
                    android:text="Name" />

                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="11"
                    android:theme="@style/editTextStyle"
                    android:hint="Input name"
                    android:inputType="textPersonName"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/descriptionError"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Wprowadź opis "
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/error" />

            <LinearLayout
                android:id="@+id/descriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/descriptionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="35dp"
                    android:textAppearance="@style/text"
                    android:text="Description" />

                <EditText
                    android:id="@+id/descriptionEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="11"
                    android:hint="Input description"
                    android:theme="@style/editTextStyle"
                    android:inputType="textPersonName"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/ratingError"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Select rating"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/error" />

            <LinearLayout
                android:id="@+id/rattingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rattingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="60dp"
                    android:textAppearance="@style/text"
                    android:text="Rating" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/RatingBar"
                    android:stepSize="1"
                    android:numStars="5"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/deadlineError"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Wprowadź deadline "
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/error" />

            <LinearLayout
                android:id="@+id/deadlineLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/deadlineTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="50dp"
                    android:textAppearance="@style/text"
                    android:text="Deadline" />

                <LinearLayout
                    android:id="@+id/deadlineLayoutTV"
                    android:layout_width="235dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="20dp"
                    android:background="@android:drawable/editbox_background"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/deadlineTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text= "--.--.----"
                        android:textColor="@color/gray"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/deadlineImageTV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/tea_green"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/saveButton"
        style="@style/Widget.Material3.FloatingActionButton.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:contentDescription="fabTaskList"
        android:text="@string/save"
        android:backgroundTint="@color/chestnut"
        android:textColor="@color/light_yellow"
        app:icon="@drawable/outline_save_24"
        app:iconGravity="end"
        android:gravity="center"
        android:textAppearance="@style/text_white"
        app:iconTint="@color/light_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
        tools:ignore="HardcodedText,ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>