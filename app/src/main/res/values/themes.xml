<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.P1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tangerine</item>
        <item name="colorPrimaryVariant">@color/chestnut</item>
        <item name="colorOnPrimary">@color/light_yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tea_green</item>
        <item name="colorSecondaryVariant">@color/vanilla</item>
        <item name="colorOnSecondary">@color/chestnut</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/tangerine</item>
        <item name="colorControlActivated">@color/chestnut</item>
    </style>
</resources>